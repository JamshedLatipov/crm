<configuration name="verto.conf" description="HTML5 Verto Endpoint">
  <settings>
    <param name="debug" value="10"/>
  </settings>
  
  <profiles>
    <profile name="default">
      <param name="bind-local" value="0.0.0.0:8081"/>
      <param name="bind-local" value="[::]:8081"/>
      <param name="secure-bind-local" value="0.0.0.0:8082"/>
      <param name="secure-bind-local" value="[::]:8082"/>
      
      <!-- TLS certificate paths -->
      <param name="tls-cert-dir" value="/usr/local/freeswitch/certs"/>
      <param name="tls-only" value="false"/>
      
      <!-- Enable ICE -->
      <param name="enable-ice" value="true"/>
      
      <!-- STUN/TURN settings -->
      <param name="ext-rtp-ip" value="$${external_rtp_ip}"/>
      <param name="local-network" value="localnet.auto"/>
      <param name="apply-candidate-acl" value="localnet.auto"/>
      
      <!-- RTP port range -->
      <param name="rtp-ip" value="$${local_ip_v4}"/>
      <param name="ext-rtp-ip" value="$${external_rtp_ip}"/>
      
      <!-- Codecs -->
      <param name="inbound-codec-string" value="OPUS,VP8"/>
      <param name="outbound-codec-string" value="OPUS,VP8"/>
      
      <!-- Context for incoming calls -->
      <param name="context" value="public"/>
      <param name="dialplan" value="XML"/>
      
      <!-- Timer -->
      <param name="timer-name" value="soft"/>
      
      <!-- Authentication -->
      <param name="auth-calls" value="true"/>
      
      <!-- Logging -->
      <param name="log-auth-failures" value="true"/>
    </profile>
  </profiles>
</configuration>

# Новая система провайдеров (рекомендуется)
USE_NEW_SMS_SYSTEM=true
FEATURE_SMS_ENABLED=true

# IMON.TJ SMS Service
IMON_TJ_LOGIN=test_user
IMON_TJ_PASSWORD=test_user2026

# Legacy провайдеры (для обратной совместимости)
# SMS.RU
SMS_RU_API_KEY=your_api_key_here

# SMSC.RU
SMSC_LOGIN=your_login
SMSC_PASSWORD=your_password

# Twilio
TWILIO_ACCOUNT_SID=your_account_sid
TWILIO_AUTH_TOKEN=your_auth_token
TWILIO_PHONE_NUMBER=+1234567890

# Telegram
FEATURE_TELEGRAM_ENABLED=false
TELEGRAM_BOT_TOKEN=your_bot_token

# WhatsApp
FEATURE_WHATSAPP_ENABLED=false
